[Unit]
Description={{ item.value.name }}
Wants=basic.target
After=basic.target network.target
Before=sshd.service

[Service]
SyslogIdentifier={{ item.value.name  }}
StandardOutput=syslog
StandardError=syslog
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/etc/discord-stock-ticker/discord-stock-ticker -address={{ interface }}:{{ item.value.port }} -db={{ db_path }}/{{ item.value.name  }}.state -frequency=10 -logLevel=1 -cache {{ extra_dst_args }}
Restart=always

[Install]
WantedBy=multi-user.target
